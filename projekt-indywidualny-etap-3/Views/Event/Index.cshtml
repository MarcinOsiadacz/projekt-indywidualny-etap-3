@model IEnumerable<projekt_indywidualny_etap_3.Models.EventModel>

@{
    ViewBag.Title = "Events Search";
}

<h2>Events Search</h2>

@using (Html.BeginForm())
{
    <!-- Search Box -->
    <div class="form-group">
        <label for="SearchString">Title</label>
        @Html.TextBox("SearchString", "", htmlAttributes: new { @class = "form-control" })
    </div>
    <!-- Filters -->
    <div class="form-group form-inline">
        <!-- Event Category -->
        <label for="eventTypeFilter">Type</label>
        <select name="eventTypeFilter" id="eventTypeFilter" class="form-control">
            <option value="">Select a type</option>
            @foreach (var category in ViewBag.EventCategoriesList)
            {
                <option value="@category.Name">@category.Name</option>
            }
        </select>
        <!-- Event Location -->
        <label for="locationFilter">Location</label>
        <select name="locationFilter" id="locationFilter" class="form-control">
            <option value="">Select a location</option>
            @foreach (var location in ViewBag.LocationsList)
            {
                <option value="@location">@location</option>
            }
        </select>
        <!-- Event Date -->
        <label for="dateFilter">Date</label>
        <input name="dateFilter" id="dateFilter" type="date" class="form-control" />
        <!-- Submit -->
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EventCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailableSlots)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventCategory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSlots)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>

